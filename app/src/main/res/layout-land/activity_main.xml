<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/result_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Result"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"


            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onNumberClick"
            android:text="c"
            android:textSize="30sp" />

        <Button
            android:id="@+id/save02"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_dark"
            android:onClick="onNumberClick"
            android:text="SAVE"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="688dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="4"
            android:textSize="30sp" />


        <Button
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="5"
            android:textSize="30sp" />


        <Button
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="6"
            android:textSize="30sp" />


        <Button
            android:id="@+id/plus"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onOperationClick"
            android:background="@android:color/darker_gray"
            android:text="+"
            android:textColor="#0920B5"
            android:textSize="30sp" />


        <Button
            android:id="@+id/maltiply"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@android:color/darker_gray"
            android:onClick="onOperationClick"
            android:text="*"
            android:textColor="#0920B5"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="685dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="2"
            android:textSize="30sp" />


        <Button
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="3"
            android:textSize="30sp" />


        <Button
            android:id="@+id/mines"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onOperationClick"
            android:background="@android:color/darker_gray"
            android:text="-"
            android:textColor="#0920B5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/division"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@android:color/darker_gray"
            android:onClick="onOperationClick"
            android:text="/"
            android:textColor="#0920B5"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="688dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/zero"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:onClick="onNumberClick"
            android:text="0"
            android:textSize="30sp" />


        <Button
            android:id="@+id/dot"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="onOperationClick"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@android:color/darker_gray"
            android:onClick="onOperationClick"
            android:text="="
            android:textColor="#0920B5"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">









    </LinearLayout>

</LinearLayout>